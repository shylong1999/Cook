<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="66dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/iconme"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/usename"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20dp" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="52dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/users" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:text="    Thay ảnh đại diện"
                android:textColor="#000000"

                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/scroll" />

            <TextView
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:text="    Các bài đã đăng"
                android:textColor="#000000"

                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/savedish"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/save2" />

            <TextView
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:text="    Các bài đã lưu"
                android:textColor="#000000"

                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dangxuat"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/upload"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView"
                android:layout_width="49dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/logout" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:text="    Đăng xuất"
                android:textColor="#000000"
                android:textSize="30dp" />
        </LinearLayout>





    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Tài Khoản"
        android:textSize="40dp"
        android:textColor="#000000"/>


</RelativeLayout>
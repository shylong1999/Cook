<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <EditText
            android:id="@+id/search"
            android:background="@drawable/shape2"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/search"
            android:hint="Nấu gì hôm nay - tìm ngay món ngon"

            ></EditText>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarhome"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dp"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/longlon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"></TextView>

                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F1ECEC" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Món ngon hôm nay"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleviewadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F1ECEC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Công thức từ Let's Cook"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="20dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="10dp"
                android:id="@+id/recycleviewletcook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Công thức từ cộng đồng"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="20dp" />



            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="10dp"
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

               />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#F1ECEC" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="Top thành viên"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icon1"
                        tools:ignore="VectorDrawableCompat" />
                    <ImageView
                        android:layout_marginTop="39dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icon2"
                        tools:ignore="VectorDrawableCompat" />
                    <ImageView
                        android:layout_marginTop="39dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icon3"
                        tools:ignore="VectorDrawableCompat" />
                    <ImageView
                        android:layout_marginTop="39dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icon4"
                        tools:ignore="VectorDrawableCompat" />
                    <ImageView
                        android:layout_marginTop="39dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/icon5"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleviewtop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />



            </LinearLayout>


        </LinearLayout>


    </ScrollView><![CDATA[



    />

]]>
</RelativeLayout>